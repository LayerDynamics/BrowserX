{
  "name": "@webgpu_x",
  "version": "0.1.0",
  "exports": "./webgpu_x.ts",
  "compilerOptions": {
    "lib": ["deno.window", "deno.ns", "esnext"],
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "experimentalDecorators": false
  },
  "lint": {
    "include": ["*.ts", "bindings/*.ts"],
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any", "no-unused-vars"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve",
    "include": ["*.ts", "bindings/*.ts"]
  },
  "tasks": {
    "build": "cargo build --release",
    "bindings": "cargo build --release && deno run --allow-all gen_bindings.ts",
    "test": "deno test --allow-ffi --unstable-ffi --no-check test.ts",
    "check": "deno check webgpu_x.ts",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check"
  },
  "test": {
    "include": ["test.ts", "tests/**/*.ts"]
  },
  "exclude": [
    "target",
    "src",
    "examples"
  ],
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.16"
  }
}
