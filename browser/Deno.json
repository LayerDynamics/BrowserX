{
  "compilerOptions": {
    "lib": ["deno.window", "deno.ns", "esnext"],
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "experimentalDecorators": false
  },
  "lint": {
    "include": ["src/"],
    "exclude": ["docs/"],
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any", "no-unused-vars"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 4,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve",
    "include": ["src/"],
    "exclude": ["docs/"]
  },
  "tasks": {
    "check": "deno check src/mod.ts",
    "check:watch": "deno check --watch src/mod.ts",
    "test": "deno test --allow-all",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check"
  },
  "test": {
    "include": ["src/**/*_test.ts", "tests/**/*.ts"]
  },
  "exclude": [
    "node_modules",
    "docs",
    ".git"
  ],
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.16",
    "@webgpu_x": "../crates/webgpu_x/webgpu_x.ts"
  }
}
